<style is:global>
    :root {
        --primary-color: #2F360D;
        --bg-color: #FFFFFF;
    }

    /* FIX DEFINITIVO PARA SCROLL EN IPHONE */
    html {
        margin: 0;
        padding: 0;
        width: 100%;
        overflow-x: hidden; /* Solo ocultamos el horizontal */
        scroll-behavior: smooth;
        -webkit-text-size-adjust: 100%;
    }

    body {
        margin: 0;
        padding: 0;
        width: 100%;
        min-height: 100vh;
        background-color: var(--bg-color);
        color: var(--primary-color);
        font-family: 'Inter', sans-serif;
        -webkit-font-smoothing: antialiased;
        /* Evitamos que el body bloquee el scroll */
        overflow-x: hidden;
        position: relative;
    }

    * {
        box-sizing: border-box;
    }

    /* Titulares */
    h1, h2, h3 {
        font-family: 'Instrument Serif', serif;
        font-weight: 400;
        margin: 0;
        line-height: 0.95;
    }

    /* Enlaces */
    a {
        color: inherit; 
        text-decoration: none; 
        transition: opacity 0.3s ease;
    }

    /* Animación del Logo */
    .rotating-logo {
        animation: rotacion-sutil 30s linear infinite;
        display: block;
    }

    @keyframes rotacion-sutil {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
</style>