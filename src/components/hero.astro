// Importa aquí tu logo si lo tienes como archivo local
// import Logo from '../assets/logo.svg';
---

<nav class="navbar">
  <div class="logo">
    <img src="/logo.png" alt="Escuchadores Logo" width="60" />
  </div>
  <ul class="nav-links">
    <li><a href="#inicio">inicio</a></li>
    <li><a href="#servicios">servicios</a></li>
    <li><a href="#contacto">contacto</a></li>
  </ul>
</nav>

<header class="hero">
  <div class="hero-content">
    <p class="pre-title">Así como hay miradores, deben existir escuchadores.</p>
    <h1>Descubre el <em>potencial</em> de tu paisaje sonoro de tu hotel, finca o área natural.</h1>
    <p class="description">
      Combinamos diseño acústico e Inteligencia Artificial para medir tu biodiversidad y crear experiencias de lujo sostenibles.
    </p>
    <a href="#" class="btn-cta">Solicitar un diagnóstico bioacústico</a>
  </div>

  <div class="hero-image">
    <div class="image-mask">
      <img src="/imagen-herramienta.jpg" alt="Herramienta de escucha acústica" />
    </div>
  </div>
</header>

<style>
  /* NAVBAR */
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 5%;
    background: transparent;
  }

  .nav-links {
    display: flex;
    gap: 3rem;
    list-style: none;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--color-primary);
    font-size: 1.2rem;
  }

  /* HERO SECTION */
  .hero {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    align-items: center;
    padding: 4rem 5%;
    gap: 4rem;
  }

  .pre-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  h1 {
    font-family: 'Instrument Serif', serif;
    font-size: 120px; /* Según tu especificación */
    line-height: 0.9;
    color: var(--color-primary);
    font-weight: 400;
    margin-bottom: 2rem;
  }

  h1 em {
    font-style: italic;
  }

  .description {
    font-family: 'Inter', sans-serif;
    font-size: 30px; /* Según tu especificación */
    line-height: 1.4;
    max-width: 600px;
    margin-bottom: 3rem;
  }

  /* BOTÓN */
  .btn-cta {
    display: inline-block;
    padding: 1.2rem 2.5rem;
    border: 1px solid var(--color-primary);
    border-radius: 50px;
    text-decoration: none;
    color: var(--color-primary);
    font-size: 1.2rem;
    transition: all 0.3s ease;
  }

  .btn-cta:hover {
    background-color: var(--color-primary);
    color: white;
  }

  /* IMAGEN CON MÁSCARA OVALADA */
  .image-mask {
    width: 100%;
    aspect-ratio: 0.8 / 1;
    overflow: hidden;
    border-radius: 50% 50% 50% 50% / 30% 30% 70% 70%; /* Forma orgánica similar a la imagen */
  }

  .image-mask img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    h1 { font-size: 80px; }
    .hero { grid-template-columns: 1fr; }
  }
</style>