  }
  .mask-capsule.small {
    width: 100%;
    height: 250px; /* Tamaño controlado para los pasos */
  }

  /* ESTA ES LA CORRECCIÓN PARA IPHONE/MÓVIL */
  @media (max-width: 768px) {
    .proceso-item {
      grid-template-columns: 1fr; /* Una sola columna */
      gap: 2rem;
      text-align: center;
    }
    .proceso-img {
      width: 150px; /* Imagen un poco más pequeña en móvil */
      margin: 0 auto; /* Centrada */
    }
    .proceso-text h3 {
      font-size: 2rem; /* Título más manejable */
    }
    .mask-capsule.small {
      height: 200px;
    }
  }
</style>