<style>
	html {
    scroll-behavior: smooth;
  }
  /* --- CONFIGURACIÓN GLOBAL --- */
  .section-padding { padding: 8rem 8%; }
  .text-center { text-align: center; }
  .margin-top { margin-top: 4rem; }
  em { font-style: italic; }
  a { color: inherit; text-decoration: none; transition: opacity 0.3s; }
  a:hover { opacity: 0.7; }

  /* --- EFECTOS DE REVELADO (SCROLL) --- */
  .reveal {
    opacity: 0;
    transform: translateY(40px);
    transition: opacity 1.2s cubic-bezier(0.2, 1, 0.3, 1), 
                transform 1.2s cubic-bezier(0.2, 1, 0.3, 1);
    will-change: opacity, transform;
  }

  .reveal.active {
    opacity: 1;
    transform: translateY(0);
  }

  /* --- NAVBAR --- */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 8%;
    /* Asegura que el navbar no se estire más que el contenido */
    max-width: 1400px; 
    margin: 0 auto;
  }

  .nav-links {
    display: flex;
    gap: 2rem; /* Reducido de 3rem para compactar */
    list-style: none;
  }

  /* Ajuste para móvil (iPhone 12) */
  @media (max-width: 768px) {
    .navbar {
      padding: 1rem 5%;
    }
    .nav-links {
      gap: 1.2rem; /* Espacio cómodo en pantallas pequeñas */
    }
    .nav-links a {
      font-size: 0.85rem; /* Un poco más pequeño para que quepa todo */
    }
  }
  .rotating-logo {
    animation: rotacion-sutil 25s linear infinite;
  }
  @keyframes rotacion-sutil {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* --- HERO --- */
  .hero {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 3.0rem;
    padding: 1rem 8% 5rem 8%;
    align-items: center;
    min-height: 85vh;
  }
  h1 {
    font-size: clamp(60px, 7.5vw, 85px);
    margin: 1rem 0;
    line-height: 0.9;
  }
  .pre-title { font-size: 1.3rem; }
  .body-text {
    font-size: clamp(18px, 2vw, 24px);
    line-height: 1.4;
    margin-bottom: 2.5rem;
    max-width: 700px;
  }
  .body-text.centered { margin-left: auto; margin-right: auto; }

  /* --- TITULARES GRANDES (H2) --- */
  .h2-large { 
    font-family: 'Instrument Serif', serif;
    font-weight: 400;
    font-size: clamp(55px, 8.5vw, 85px); 
    line-height: 0.85;
    margin-bottom: 4rem;
    max-width: 1300px;
  }

  /* --- SECCIONES SPLIT --- */
  .split-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8%;
    padding: 8rem 8%;
    align-items: center;
  }
  .reverse { direction: ltr; }
  .reverse .visual { order: 1; }
  .reverse .content { order: 2; }

  /* --- MÁSCARAS --- */
  .mask-capsule {
    width: 100%;
    aspect-ratio: 0.75 / 1; 
    border-radius: 500px; 
    overflow: hidden;
  }
  .mask-circle {
    width: 100%;
    aspect-ratio: 1;
    border-radius: 50%;
    overflow: hidden;
  }
  .mask-capsule img, .mask-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* --- GRIDS Y LISTAS --- */
  .grid-three {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4rem;
  }
  .grid-three p { font-size: 18px; line-height: 1.5; }

  .proceso-list p {
    font-size: 22px;
    margin-bottom: 2.5rem;
    line-height: 1.4;
    max-width: 900px;
  }

  /* --- BANNER --- */
 .banner-forest {
    width: 100%;
    min-height: 75vh;
    background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('/bosque.jpg');
    background-size: cover;
    background-position: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    text-align: center;
    margin: 6rem 0;
    padding: 0 5%; /* Padding para que el texto no toque bordes */
  }

  .banner-text {
    font-family: 'Instrument Serif', serif;
    font-size: clamp(30px, 6vw, 75px);
    line-height: 1.0; /* IMPORTANTE: No usar 0.5 o se pisa el texto */
  }
  /* --- BOTONES --- */
  .btn-cta {
    display: inline-block;
    padding: 1.2rem 3rem;
    border: 1px solid #2F360D;
    border-radius: 60px;
    font-size: 1.1rem;
    color: #2F360D;
    background-color: transparent;
    text-decoration: none;
    transition: all 0.4s ease;
  }

  .btn-cta:hover {
    background-color: #2F360D;
    color: #FFFFFF;
  }

  /* --- BENEFICIOS --- */
  .beneficios {
    margin: 5rem auto;
    text-align: left;
    max-width: 650px;
  }
  .beneficios-title { font-size: 36px; margin-bottom: 2rem; }
  .beneficios ul { list-style: disc; font-size: 22px; line-height: 2.2; padding-left: 2rem; }

  /* --- FOOTER --- */
  .contacto { padding: 10rem 8%; text-align: center; }
  .info { font-size: 26px; margin-top: 3rem; }

  /* --- RESPONSIVE --- */
  @media (max-width: 1024px) {
    .hero, .split-section { grid-template-columns: 1fr; text-align: center; }
    .hero-content { display: flex; flex-direction: column; align-items: center; }
    .reverse .visual { order: -1; }
    .grid-three { grid-template-columns: 1fr; }
  }

  /* --- SECCIÓN ALIANZAS (LOGOS) --- */
  .logos-grid {
    display: grid;
    /* Crea columnas automáticas de mínimo 150px que se ajustan solas */
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 4rem;
    align-items: center;
    margin-top: 4rem;
  }

  .logo-item {
    display: flex;
    justify-content: center;
    align-items: center;
    filter: grayscale(1); /* Los pone en blanco y negro para no distraer */
    opacity: 0.6;
    transition: all 0.5s ease;
  }

  .logo-item:hover {
    filter: grayscale(0); /* Recuperan color al pasar el ratón */
    opacity: 1;
    transform: scale(1.05); /* Crecen un poquito */
  }

  .logo-item img {
    max-width: 100%;
    height: auto;
    max-height: 80px; /* Evita que logos muy altos rompan la línea */
    object-fit: contain;
  }

  /* Ajuste para móvil */
  @media (max-width: 768px) {
    .nav-links {
      gap: 1rem; /* Mucho más pequeño para iPhone 12 */
      font-size: 0.9rem;
    }
    .navbar { padding: 1rem 5%; }
  }
  
  
@media (max-width: 1024px) {
    .section-padding { padding: 5rem 5%; } /* Reducimos padding lateral */
    .hero, .split-section { grid-template-columns: 1fr; text-align: center; }
